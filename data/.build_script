
-- default texture parameters
buildsystem.set_type_parameter("texture", "sRGB", true)
buildsystem.set_type_parameter("texture", "format", "bc1")
buildsystem.set_type_parameter("texture", "quality", "normal")

buildsystem.set_type_parameter("gpuprogram", "debug", true)
buildsystem.set_type_parameter("gpuprogram", "skipoptimization", true)
buildsystem.set_type_parameter("gpuprogram", "warningsaserrors", true)
buildsystem.set_type_parameter("gpuprogram", "includesource", true)
buildsystem.set_type_parameter("gpuprogram", "defines", {A=1, B=2})

buildsystem.set_current_package("font_package")
buildsystem.set_type_parameter("font", "size", 10)
buildsystem.add_build_folder("fonts")
buildsystem.set_current_package("textures")
buildsystem.set_type_parameter("texture", "sRGB", false)
buildsystem.add_files("textures/*.png", "texture")

buildsystem.set_current_package("shaders")
buildsystem.add_files("shaders/*_vs4.hlsl", "gpuprogram", {profile="vs4_0", entry="mainVP"})
buildsystem.add_files("shaders/*_ps4.hlsl", "gpuprogram", {profile="ps4_0", entry="mainFP"})